{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es6"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}